<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardElevation="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/darkgrey"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:layout_marginBottom="1dp"
                android:background="@color/white">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/userProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/user_profile"
                    />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/userProfile"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/curLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/userName"
                    android:textSize="@dimen/_13sdp"
                    android:paddingLeft="@dimen/_6sdp"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/postDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="ddsgdfgdfg"
                    android:layout_below="@+id/userProfile"
                    android:paddingLeft="@dimen/_6sdp"
                    android:textColor="@color/darkgrey"
                    />
                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/postVideo"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_below="@+id/postDetail">
                </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/like"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/tvLike"
                    android:src="@drawable/like"
                    />
                <TextView
                    android:id="@+id/likeCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_9sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvComment"
                    android:src="@drawable/comment"
                    />
                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_toLeftOf="@id/tvShare"
                    android:paddingTop="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share"
                    />
                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"/>



            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>